---
import { Icon } from "astro-icon/components";
---

<section id="location" class="py-20 bg-white">
    <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
            <!-- Info -->
            <div class="reveal-left">
                <p
                    class="text-orange-700 font-bold uppercase tracking-wider mb-2"
                >
                    Visit Us
                </p>
                <h2 class="text-3xl md:text-4xl font-bold text-brand-dark mb-8">
                    Find us in Ramanattukara
                </h2>

                <div class="space-y-6">
                    <div class="flex items-start gap-4">
                        <div
                            class="w-12 h-12 bg-orange-100 rounded-full flex items-center justify-center shrink-0"
                        >
                            <Icon
                                name="fa6-solid:location-dot"
                                class="text-brand-orange text-xl"
                            />
                        </div>
                        <div>
                            <h3 class="font-bold text-xl text-brand-dark mb-1">
                                Address
                            </h3>
                            <p class="text-gray-600">
                                Near University Road, Ramanattukara,<br
                                />Kozhikode, Kerala 673633
                            </p>
                        </div>
                    </div>

                    <div class="flex items-start gap-4">
                        <div
                            class="w-12 h-12 bg-orange-100 rounded-full flex items-center justify-center shrink-0"
                        >
                            <Icon
                                name="fa6-solid:phone"
                                class="text-brand-orange text-xl"
                            />
                        </div>
                        <div>
                            <h3 class="font-bold text-xl text-brand-dark mb-1">
                                Contact
                            </h3>
                            <p class="text-gray-600 mb-2">+91 987 654 3210</p>
                            <a
                                href="tel:+919876543210"
                                class="text-orange-700 font-medium hover:underline"
                                >Call Us Now</a
                            >
                        </div>
                    </div>
                </div>
            </div>

            <!-- Map -->
            <div
                class="h-[300px] md:h-[400px] bg-gray-200 rounded-2xl overflow-hidden shadow-lg reveal-right relative"
            >
                <iframe
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3913.6877965961074!2d75.8645!3d11.1685!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3ba6503b44e0d9b5%3A0x868194483754983!2sRamanattukara%2C%20Kerala!5e0!3m2!1sen!2sin!4v1625134567890!5m2!1sen!2sin"
                    width="100%"
                    height="100%"
                    style="border:0;"
                    allowfullscreen=""
                    loading="lazy"
                    class="absolute inset-0 w-full h-full grayscale hover:grayscale-0 transition-all duration-500"
                    title="Google Maps Location of Momzland"
                >
                </iframe>
            </div>
        </div>
    </div>
</section>
