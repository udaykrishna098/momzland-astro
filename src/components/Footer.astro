---
import { Icon } from "astro-icon/components";

interface Props {
    description?: string;
}

const {
    description = "Serving happiness on a plate. Authentic flavors, quality ingredients, and late-night service.",
} = Astro.props;
---

<footer
    class="bg-neutral-900 text-white pt-16 pb-8 border-t border-neutral-800 mt-auto"
>
    <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8 md:gap-12 mb-12">
            <div class="col-span-1">
                <a
                    href="/"
                    class="flex items-center gap-2 mb-4"
                    aria-label="Momzland Home"
                >
                    <img
                        src="/logo.jpg"
                        alt="Momzland Logo Link"
                        class="h-10 w-auto rounded-full border border-white/20"
                        width="40"
                        height="40"
                    />
                </a>
                <p class="text-gray-200 leading-relaxed mb-6">
                    {description}
                </p>
            </div>

            <div>
                <h3 class="text-lg font-bold mb-6 text-white">Quick Links</h3>
                <ul class="space-y-3">
                    <li>
                        <a
                            href="/"
                            class="text-gray-200 hover:text-brand-orange transition-colors"
                            >Home</a
                        >
                    </li>
                    <li>
                        <a
                            href="/about"
                            class="text-gray-200 hover:text-brand-orange transition-colors"
                            >About Us</a
                        >
                    </li>
                    <li>
                        <a
                            href="/outlet"
                            class="text-gray-200 hover:text-brand-orange transition-colors"
                            >Outlets</a
                        >
                    </li>
                </ul>
            </div>

            <div>
                <h3 class="text-lg font-bold mb-6 text-white">Our Outlets</h3>
                <ul class="space-y-2">
                    <li>
                        <a
                            href="#"
                            class="text-gray-200 hover:text-brand-orange transition-colors"
                            >Mr. Chai</a
                        >
                    </li>
                    <li>
                        <a
                            href="#"
                            class="text-gray-200 hover:text-brand-orange transition-colors"
                            >Sign Laban</a
                        >
                    </li>
                    <li>
                        <a
                            href="#"
                            class="text-gray-200 hover:text-brand-orange transition-colors"
                            >Stream and Fry</a
                        >
                    </li>
                    <li>
                        <a
                            href="#"
                            class="text-gray-200 hover:text-brand-orange transition-colors"
                            >Sabrosa</a
                        >
                    </li>
                    <li>
                        <a
                            href="#"
                            class="text-gray-200 hover:text-brand-orange transition-colors"
                            >Grill Spot</a
                        >
                    </li>
                    <li>
                        <a
                            href="#"
                            class="text-gray-200 hover:text-brand-orange transition-colors"
                            >Galgappe</a
                        >
                    </li>
                    <li>
                        <a
                            href="#"
                            class="text-gray-200 hover:text-brand-orange transition-colors"
                            >Lilpops</a
                        >
                    </li>
                </ul>
            </div>

            <div>
                <h3 class="text-lg font-bold mb-6 text-white">Contact</h3>
                <ul class="space-y-3 text-gray-200">
                    <li>
                        <Icon
                            name="fa6-solid:phone"
                            class="w-6 text-brand-orange inline-block"
                        /> +91 987 654 3210
                    </li>
                    <li>
                        <Icon
                            name="fa6-solid:location-dot"
                            class="w-6 text-brand-orange inline-block"
                        /> Ramanattukara
                    </li>
                </ul>
            </div>
        </div>

        <div
            class="border-t border-neutral-800 pt-8 text-center text-gray-200 text-sm"
        >
            <p>&copy; 2024 Momzland Food Court. All rights reserved.</p>
        </div>
    </div>
</footer>
