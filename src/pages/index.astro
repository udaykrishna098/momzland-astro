---
import Layout from "../layouts/Layout.astro";
import OutletsSection from "../components/OutletsSection.astro";
import PremiumBrands from "../components/PremiumBrands.astro";
import GallerySection from "../components/GallerySection.astro";
import LocationSection from "../components/LocationSection.astro";
import { Icon } from "astro-icon/components";

const schema = JSON.stringify({
	"@context": "https://schema.org",
	"@type": "FoodCourt",
	name: "Momzland Food Court",
	image: "https://momzland.co.in/og-image.jpg",
	description:
		"Experience a galaxy of flavors at Momzland Food Court. 7 unique premium outlets under one roof, open late until 2:00 AM.",
	address: {
		"@type": "PostalAddress",
		streetAddress: "Near University Road",
		addressLocality: "Ramanattukara",
		addressRegion: "Kerala",
		postalCode: "673633",
		addressCountry: "IN",
	},
	geo: {
		"@type": "GeoCoordinates",
		latitude: 11.1786,
		longitude: 75.8306,
	},
	url: "https://momzland.co.in",
	telephone: "+919876543210",
	servesCuisine: "Indian, Arabian, Chinese, Fast Food, Desserts",
	priceRange: "₹₹",
	openingHoursSpecification: [
		{
			"@type": "OpeningHoursSpecification",
			dayOfWeek: [
				"Monday",
				"Tuesday",
				"Wednesday",
				"Thursday",
				"Friday",
				"Saturday",
				"Sunday",
			],
			opens: "11:00",
			closes: "02:00",
		},
	],
	department: [
		{ "@type": "Restaurant", name: "Mr. Chai" },
		{ "@type": "Restaurant", name: "Sign Laban" },
		{ "@type": "Restaurant", name: "Stream & Fry" },
		{ "@type": "Restaurant", name: "Sabrosa" },
		{ "@type": "Restaurant", name: "Grill Spot" },
		{ "@type": "Restaurant", name: "Galgappe" },
		{ "@type": "Restaurant", name: "Lilpops" },
	],
});
---

<Layout
	title="Momzland Food Court | Best Restaurant in Ramanattukara | Late Night Food"
	description="Visit Momzland Food Court in Ramanattukara for delicious homestyle food. 7 premium outlets including Mr. Chai, Sign Laban & more. Open until 2:00 AM for Dine-in & Takeaway."
	keywords="Momzland, Momzland Food Court, Ramanattukara restaurant, late night food Ramanattukara, best food court Calicut, dine-in Ramanattukara, takeaway Ramanattukara, Mr Chai, Sign Laban"
	schema={schema}
	activePage="home"
>
	<header
		id="home"
		class="relative h-screen min-h-[600px] flex items-center justify-center overflow-hidden"
	>
		<div
			id="background-layer"
			class="absolute inset-0 z-0 overflow-hidden animated-gradient-bg"
		>
			<div class="hero-overlay absolute inset-0 z-10 bg-black/20"></div>
		</div>

		<div
			class="relative z-10 container mx-auto px-4 text-center text-white"
		>
			<h1
				class="hero-title text-4xl sm:text-5xl md:text-7xl lg:text-8xl font-bold mb-6 leading-tight transform translate-y-10"
			>
				Momz<span
					class="text-transparent bg-clip-text bg-gradient-to-r from-brand-orange to-brand-pink"
					>land</span
				>
			</h1>
			<p
				class="hero-subtitle text-lg sm:text-xl md:text-2xl lg:text-3xl mb-10 text-gray-200 font-light transform translate-y-10"
			>
				Explore Multiple Cuisines at Our Food Court Locations.
			</p>

			<div
				class="hero-features flex flex-wrap justify-center gap-4 sm:gap-6 mb-12 transform translate-y-10"
			>
				<span
					class="flex items-center gap-2 bg-white/10 backdrop-blur-sm px-4 py-2 rounded-full border border-white/20 text-sm sm:text-base"
				>
					<Icon name="fa6-solid:utensils" class="text-brand-orange" /> Dine-in
				</span>

				<span
					class="flex items-center gap-2 bg-white/10 backdrop-blur-sm px-4 py-2 rounded-full border border-white/20 text-sm sm:text-base"
				>
					<Icon
						name="fa6-solid:people-group"
						class="text-brand-orange"
					/> Family Atmosphere
				</span>

				<span
					class="flex items-center gap-2 bg-white/10 backdrop-blur-sm px-4 py-2 rounded-full border border-white/20 text-sm sm:text-base"
				>
					<Icon
						name="fa6-solid:bag-shopping"
						class="text-brand-orange"
					/> Takeaway
				</span>
			</div>
		</div>

		<div
			class="absolute bottom-10 left-1/2 transform -translate-x-1/2 animate-bounce"
		>
			<a
				href="#gallery"
				class="text-white/70 hover:text-white transition-colors"
				aria-label="Scroll to Gallery"
			>
				<Icon name="fa6-solid:chevron-down" class="text-2xl" />
			</a>
		</div>
	</header>

	<!-- Info Bar -->
	<div class="bg-brand-dark py-8 border-b border-gray-800">
		<div class="container mx-auto px-4">
			<div
				class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center divide-y md:divide-y-0 md:divide-x divide-gray-700"
			>
				<div class="p-4 flex flex-col items-center">
					<Icon
						name="fa6-solid:clock"
						class="text-brand-orange text-3xl mb-3"
					/>
					<h2 class="text-white font-bold text-xl mb-1">
						Open Late Night
					</h2>
					<p class="text-gray-300">Late night cravings sorted</p>
				</div>
				<div class="p-4 flex flex-col items-center">
					<Icon
						name="fa6-solid:location-dot"
						class="text-brand-orange text-3xl mb-3"
					/>
					<h2 class="text-white font-bold text-xl mb-1">
						Ramanattukara
					</h2>
					<p class="text-gray-300">Near University Road</p>
				</div>
				<div class="p-4 flex flex-col items-center">
					<Icon
						name="fa6-solid:bag-shopping"
						class="text-brand-orange text-3xl mb-3"
					/>
					<h2 class="text-white font-bold text-xl mb-1">
						Takeaway Available
					</h2>
					<p class="text-gray-300">Order & Pick Up</p>
				</div>
			</div>
		</div>
	</div>

	<!-- Premium Brands Section -->
	<PremiumBrands />

	<!-- Outlets Section -->
	<OutletsSection />

	<!-- Gallery Section (Replaces Menu Section) -->
	<GallerySection />

	<!-- Location Section (ID for Anchor Link) -->
	<LocationSection />

	<style>
		.animated-gradient-bg {
			/* Darker shades of brand pink and orange mixed with dark background */
			background: linear-gradient(
				-45deg,
				#1c1917,
				#591f37,
				#663b2a,
				#1c1917
			);
			background-size: 400% 400%;
			animation: gradient 15s ease infinite;
		}

		@keyframes gradient {
			0% {
				background-position: 0% 50%;
			}
			50% {
				background-position: 100% 50%;
			}
			100% {
				background-position: 0% 50%;
			}
		}
	</style>

	<script>
		import { animate, createTimeline, set } from "animejs";

		// Hero Content Animation
		document.addEventListener("DOMContentLoaded", () => {
			if (document.querySelector(".hero-title")) {
				const heroTimeline = createTimeline({
					defaults: {
						ease: "outExpo",
						duration: 1000,
					},
				});

				heroTimeline
					.add(".hero-title", {
						opacity: [0, 1],
						translateY: [50, 0],
						duration: 1200,
					})
					.add(
						".hero-subtitle",
						{
							opacity: [0, 1],
							translateY: [30, 0],
						},
						"-=800",
					)
					.add(
						".hero-features",
						{
							opacity: [0, 1],
							translateY: [30, 0],
						},
						"-=800",
					)
					.add(
						".hero-cta",
						{
							opacity: [0, 1],
							translateY: [30, 0],
						},
						"-=800",
					);
			}
		});

		// Intersection Observer Helper for Scroll Animations
		const observerOptions = {
			root: null,
			rootMargin: "0px",
			threshold: 0.15,
		};

		const animateOnScroll = (
			entries: IntersectionObserverEntry[],
			observer: IntersectionObserver,
		) => {
			entries.forEach((entry) => {
				if (entry.isIntersecting) {
					const target = entry.target as HTMLElement;
					const animationType = target.dataset.animation;

					let animeProps = {};

					switch (animationType) {
						case "up":
							animeProps = {
								translateY: [50, 0],
								opacity: [0, 1],
							};
							break;
						case "left":
							animeProps = {
								translateX: [-50, 0],
								opacity: [0, 1],
							};
							break;
						case "right":
							animeProps = {
								translateX: [50, 0],
								opacity: [0, 1],
							};
							break;
						case "scale":
							animeProps = { scale: [0.9, 1], opacity: [0, 1] };
							break;
					}

					animate(target, {
						duration: 800,
						ease: "outCubic",
						...animeProps,
					});

					observer.unobserve(target);
				}
			});
		};

		const observer = new IntersectionObserver(
			animateOnScroll,
			observerOptions,
		);

		// Register elements
		document.querySelectorAll(".reveal-up").forEach((el) => {
			(el as HTMLElement).dataset.animation = "up";
			set(el, { opacity: 0 });
			observer.observe(el);
		});

		document.querySelectorAll(".reveal-left").forEach((el) => {
			(el as HTMLElement).dataset.animation = "left";
			set(el, { opacity: 0 });
			observer.observe(el);
		});

		document.querySelectorAll(".reveal-right").forEach((el) => {
			(el as HTMLElement).dataset.animation = "right";
			set(el, { opacity: 0 });
			observer.observe(el);
		});

		document.querySelectorAll(".reveal-scale").forEach((el, i) => {
			(el as HTMLElement).dataset.animation = "scale";
			set(el, { opacity: 0 });
			observer.observe(el);
		});
	</script>
</Layout>
