---
import Layout from "../../layouts/Layout.astro";
import { Image } from "astro:assets";
import heroImage from "../../assets/outlets/sign-laban.jpg";

const brand = {
    name: "Sign Laban",
    tagline: "Egyptian Delight",
    description:
        "Tradition meets indulgence through authentic Egyptian desserts crafted with the finest ingredients. A legacy of sweetness.",
    whatsapp: "919876543210",
    menu: [
        {
            category: "Laban Specials",
            items: [
                {
                    name: "Classic Laban",
                    price: "₹60",
                    desc: "Refreshing yogurt drink",
                },
                { name: "Mango Laban", price: "₹80", desc: "Tropical twist" },
            ],
        },
        {
            category: "Desserts",
            items: [
                { name: "Basbousa", price: "₹90", desc: "Semolina cake" },
                { name: "Kunafa", price: "₹150", desc: "Cheese pastry" },
            ],
        },
    ],
    gallery: [
        "https://images.unsplash.com/photo-1558961363-fa8fdf82db35?auto=format&fit=crop&w=600&q=80",
        "https://images.unsplash.com/photo-1579954115545-a95591f289c1?auto=format&fit=crop&w=600&q=80",
        "https://images.unsplash.com/photo-1629115916087-353234d6c698?auto=format&fit=crop&w=600&q=80",
    ],
};
const schema = JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Restaurant",
    name: "Sign Laban",
    parentOrganization: {
        "@type": "FoodCourt",
        name: "Momzland Food Court",
    },
    image: "https://momzland.co.in/assets/outlets/sign-laban.jpg",
    description: brand.description,
    address: {
        "@type": "PostalAddress",
        streetAddress: "Momzland Food Court, Near University Road",
        addressLocality: "Ramanattukara",
        addressRegion: "Kerala",
        postalCode: "673633",
        addressCountry: "IN",
    },
    geo: {
        "@type": "GeoCoordinates",
        latitude: 11.1786,
        longitude: 75.8306,
    },
    url: "https://momzland.co.in/brands/sign-laban",
    telephone: "+91" + brand.whatsapp,
    servesCuisine: "Dessert, Egyptian, Beverages",
    priceRange: "₹₹",
    menu: "https://momzland.co.in/brands/sign-laban",
});
---

<Layout
    title="Sign Laban | Best Egyptian Desserts in Ramanattukara | Momzland"
    description="Sign Laban at Momzland Food Court. Experience authentic Egyptian desserts like Kunafa, Basbousa and refreshing Laban drinks in Ramanattukara."
    keywords="Sign Laban, Egyptian desserts Ramanattukara, Kunafa, Basbousa, Laban drink, Momzland Food Court"
    schema={schema}
    showNavbar={false}
    showFooter={false}
>
    <!-- Custom Back Button -->
    <a
        href="/outlet"
        class="fixed top-6 left-6 z-50 w-12 h-12 bg-white/90 backdrop-blur text-[#1A237E] rounded-full shadow-lg flex items-center justify-center hover:scale-110 transition-transform border-2 border-[#1A237E]"
    >
        <i class="fa-solid fa-arrow-left text-xl"></i>
    </a>

    <!-- Royal / Egyptian Theme -->
    <div class="bg-[#FAFAFA] min-h-screen text-[#1A237E] font-sans">
        <!-- Split Hero -->
        <div class="flex flex-col md:flex-row h-screen">
            <!-- Left Text Content -->
            <div
                class="w-full md:w-1/2 flex flex-col justify-center p-8 md:p-16 bg-white relative overflow-hidden"
            >
                <!-- Decorative Pattern -->
                <div
                    class="absolute top-0 left-0 w-full h-2 bg-gradient-to-r from-[#1A237E] via-[#7986CB] to-[#1A237E]"
                >
                </div>
                <div
                    class="absolute bottom-0 right-0 p-12 opacity-5 pointer-events-none"
                >
                    <i class="fa-solid fa-pyramid text-9xl"></i>
                </div>

                <div class="z-10 animate-fade-in-up">
                    <span
                        class="text-[#7986CB] font-bold tracking-[0.3em] uppercase text-sm mb-4 block"
                        >{brand.tagline}</span
                    >
                    <h1
                        class="text-6xl md:text-8xl font-black mb-6 leading-tight tracking-tighter text-[#1A237E]"
                    >
                        SIGN<br />
                        <span
                            class="text-transparent bg-clip-text bg-gradient-to-r from-[#1A237E] to-[#7986CB]"
                            >LABAN</span
                        >
                    </h1>
                    <p
                        class="text-lg md:text-xl text-gray-600 mb-8 max-w-md border-l-4 border-[#1A237E] pl-6 italic"
                    >
                        {brand.description}
                    </p>
                    <a
                        href="#menu"
                        class="inline-block px-8 py-4 bg-[#1A237E] text-white font-bold rounded-none hover:bg-[#0D47A1] transition-all hover:translate-x-2 shadow-lg"
                    >
                        Explore Menu <i class="fa-solid fa-arrow-right ml-2"
                        ></i>
                    </a>
                </div>
            </div>

            <!-- Right Image Content -->
            <div
                class="w-full md:w-1/2 h-[50vh] md:h-full relative overflow-hidden group"
            >
                <Image
                    src={heroImage}
                    class="w-full h-full object-cover transform scale-100 group-hover:scale-110 transition-transform duration-1000"
                    alt="Sign Laban"
                    fetchpriority="high"
                />
                <div
                    class="absolute inset-0 bg-[#1A237E]/20 group-hover:bg-transparent transition-colors duration-500"
                >
                </div>

                <!-- Initial Overlay Text -->
                <div
                    class="absolute bottom-12 left-12 text-white/90 hidden md:block"
                >
                    <p
                        class="text-sm uppercase tracking-widest border-b border-white/50 pb-2 inline-block"
                    >
                        Established Heritage
                    </p>
                </div>
            </div>
        </div>

        <!-- Elegant Menu List -->
        <section id="menu" class="py-24 px-4 bg-[#F5F5F7]">
            <div class="max-w-4xl mx-auto">
                <div class="text-center mb-16">
                    <h2
                        class="text-4xl font-light text-[#1A237E] mb-2 uppercase tracking-widest"
                    >
                        The Collection
                    </h2>
                    <div class="w-16 h-1 bg-[#1A237E] mx-auto"></div>
                </div>

                <!-- Order Section -->
                <section class="py-20 relative overflow-hidden">
                    <div class="absolute inset-0 bg-[#304FFE] opacity-5"></div>
                    <div
                        class="container mx-auto px-4 text-center relative z-10"
                    >
                        <div
                            class="max-w-3xl mx-auto bg-white p-12 rounded-3xl shadow-xl border border-[#E8EAF6] group hover:shadow-2xl transition-shadow duration-500"
                        >
                            <h2
                                class="text-5xl font-black text-[#1A237E] mb-6 tracking-tight"
                            >
                                Taste the Royalty
                            </h2>
                            <p class="text-xl text-[#5C6BC0] mb-10 font-medium">
                                Authentic Egyptian desserts are just a click
                                away.
                            </p>

                            <a
                                href={`https://wa.me/${brand.whatsapp}`}
                                target="_blank"
                                class="inline-flex items-center justify-center px-10 py-5 bg-[#1A237E] text-white text-xl font-bold rounded-full overflow-hidden relative group/btn w-full md:w-auto hover:scale-105 transition-transform"
                            >
                                <span
                                    class="absolute inset-0 bg-white/20 translate-y-full group-hover/btn:translate-y-0 transition-transform duration-300"
                                ></span>
                                <span class="relative flex items-center gap-4">
                                    Order Now <i
                                        class="fa-solid fa-arrow-right-long group-hover/btn:translate-x-2 transition-transform"
                                    ></i>
                                </span>
                            </a>
                        </div>
                    </div>
                </section>
            </div>
        </section>

        <!-- Minimal Gallery -->
        <section class="py-24 bg-white">
            <div class="container mx-auto px-4">
                <div class="grid grid-cols-1 md:grid-cols-3 gap-1">
                    {
                        brand.gallery.map((img) => (
                            <div class="relative aspect-[4/5] overflow-hidden group">
                                <img
                                    src={img}
                                    class="w-full h-full object-cover transition-all duration-700 group-hover:scale-105 group-hover:brightness-110"
                                    alt="Gallery"
                                />
                                <div class="absolute inset-0 bg-black/50 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center">
                                    <span class="text-white border border-white px-6 py-2 uppercase tracking-widest text-sm">
                                        View
                                    </span>
                                </div>
                            </div>
                        ))
                    }
                </div>
            </div>
        </section>

        <!-- Brand Footer -->
        <footer class="bg-[#1A237E] text-white py-16 px-4">
            <div
                class="container mx-auto grid grid-cols-1 md:grid-cols-3 gap-12 max-w-6xl"
            >
                <!-- Location -->
                <div>
                    <h3 class="text-2xl font-bold mb-6">Find Us</h3>
                    <p class="leading-relaxed mb-4 opacity-80">
                        Level 2, Momzland Food Court<br />
                        City Center Mall<br />
                        Mangalore, Karnataka 575001
                    </p>
                    <a
                        href="https://maps.google.com"
                        target="_blank"
                        class="text-[#7986CB] hover:text-white transition-colors flex items-center gap-2"
                    >
                        <i class="fa-solid fa-map-location-dot"></i> Get Directions
                    </a>
                </div>

                <!-- Hours & Contact -->
                <div>
                    <h3 class="text-2xl font-bold mb-6">Open Hours</h3>
                    <ul class="space-y-2 mb-6 opacity-80">
                        <li class="flex justify-between">
                            <span>Mon - Sun:</span>
                            <span>10:00 AM - 11:00 PM</span>
                        </li>
                    </ul>
                    <div class="pt-4 border-t border-white/20">
                        <p class="flex items-center gap-3 mb-2">
                            <i class="fa-solid fa-phone text-[#7986CB]"></i> +{
                                brand.whatsapp
                            }
                        </p>
                        <p class="flex items-center gap-3">
                            <i class="fa-solid fa-envelope text-[#7986CB]"></i> hello@signlaban.com
                        </p>
                    </div>
                </div>

                <!-- Concept -->
                <div class="text-center md:text-right">
                    <h3 class="text-3xl font-black mb-4">SIGN LABAN</h3>
                    <p class="text-sm opacity-60 mb-6 italic">
                        {brand.tagline}
                    </p>
                    <div class="flex justify-center md:justify-end gap-4">
                        <a
                            href="#"
                            class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center hover:bg-white hover:text-[#1A237E] transition-all"
                            ><i class="fa-brands fa-instagram"></i></a
                        >
                        <a
                            href="#"
                            class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center hover:bg-white hover:text-[#1A237E] transition-all"
                            ><i class="fa-brands fa-facebook-f"></i></a
                        >
                    </div>
                </div>
            </div>
        </footer>
    </div></Layout
>
