---
import Layout from "../../layouts/Layout.astro";
import { Image } from "astro:assets";
import heroImage from "../../assets/outlets/mr-chai-3d.jpg";

const brand = {
    name: "Mr. Chai",
    tagline: "The Soul of Chai",
    description:
        "Mr. Chai celebrates the true soul of chai, bringing together classic and modern flavors. Each sip is freshly brewed with premium ingredients.",
    whatsapp: "919876543210",
    menu: [
        {
            category: "Chai Specials",
            items: [
                { name: "Masala Chai", price: "₹25", desc: "Spices blend" },
                { name: "Elaichi Chai", price: "₹25", desc: "Cardamom hit" },
                { name: "Ginger Chai", price: "₹25", desc: "Fresh ginger" },
            ],
        },
        {
            category: "Snacks",
            items: [
                { name: "Bun Maska", price: "₹45", desc: "Buttery delight" },
                { name: "Samosa", price: "₹20", desc: "Crispy savory" },
            ],
        },
    ],
    gallery: [
        "https://images.unsplash.com/photo-1576092768241-dec231879fc3?auto=format&fit=crop&w=600&q=80",
        "https://images.unsplash.com/photo-1561336313-0bd5e0b27ec8?auto=format&fit=crop&w=600&q=80",
        "https://images.unsplash.com/photo-1594212699903-ec8a3eca50f5?auto=format&fit=crop&w=600&q=80",
    ],
};
const schema = JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Restaurant",
    name: "Mr. Chai",
    parentOrganization: {
        "@type": "FoodCourt",
        name: "Momzland Food Court",
    },
    image: "https://momzland.co.in/assets/outlets/mr-chai-3d.jpg",
    description: brand.description,
    address: {
        "@type": "PostalAddress",
        streetAddress: "Momzland Food Court, Near University Road",
        addressLocality: "Ramanattukara",
        addressRegion: "Kerala",
        postalCode: "673633",
        addressCountry: "IN",
    },
    geo: {
        "@type": "GeoCoordinates",
        latitude: 11.1786,
        longitude: 75.8306,
    },
    url: "https://momzland.co.in/brands/mr-chai",
    telephone: "+91" + brand.whatsapp,
    servesCuisine: "Tea, Snacks, Indian",
    priceRange: "₹",
    menu: "https://momzland.co.in/brands/mr-chai",
});
---

<Layout
    title="Mr. Chai at Momzland | Best Tea & Snacks in Ramanattukara"
    description="Mr. Chai at Momzland Food Court, Ramanattukara. Enjoy authentic Masala Chai, Elaichi Chai, Bun Maska & Snacks. Open late right near University Road."
    keywords="Mr Chai, Tea shop Ramanattukara, Masala Chai, Momzland Food Court, Evening snacks Ramanattukara, late night tea"
    schema={schema}
    showNavbar={false}
    showFooter={false}
>
    <!-- Custom Back Button -->
    <a
        href="/outlet"
        class="fixed top-6 left-6 z-50 w-12 h-12 bg-white/90 backdrop-blur text-[#D84315] rounded-full shadow-lg flex items-center justify-center hover:scale-110 transition-transform border-2 border-[#D84315]"
    >
        <i class="fa-solid fa-arrow-left text-xl"></i>
    </a>

    <!-- Rustic/Classic Theme -->
    <div class="bg-[#FFF8E1] min-h-screen font-serif text-[#3E2723]">
        <!-- Hero Section -->
        <header
            class="relative h-[60vh] flex items-center justify-center overflow-hidden"
        >
            <div class="absolute inset-0 z-0">
                <Image
                    src={heroImage}
                    alt="Mr Chai Background"
                    class="w-full h-full object-cover opacity-90"
                    fetchpriority="high"
                />
                <div
                    class="absolute inset-0 bg-gradient-to-b from-black/40 via-transparent to-[#FFF8E1]"
                >
                </div>

                <div
                    class="relative z-10 text-center p-8 bg-white/90 backdrop-blur-sm rounded-xl shadow-2xl border-4 border-[#D84315] max-w-lg mx-4 transform hover:scale-105 transition-transform duration-500"
                >
                    <h1
                        class="text-5xl md:text-7xl font-bold text-[#D84315] mb-2 drop-shadow-sm"
                        style="font-family: 'Playfair Display', serif;"
                    >
                        Mr. Chai
                    </h1>
                    <p
                        class="text-xl italic tracking-widest uppercase font-sans text-gray-700"
                    >
                        {brand.tagline}
                    </p>
                    <div
                        class="w-24 h-1 bg-[#D84315] mx-auto mt-4 rounded-full"
                    >
                    </div>
                </div>
            </div>

            <!-- Story Section -->
            <section class="py-16 px-6 max-w-4xl mx-auto text-center">
                <div
                    class="inline-block p-2 border-2 border-[#D84315]/20 rounded-full mb-6"
                >
                    <i
                        class="fa-solid fa-mug-hot text-3xl text-[#D84315] p-4 bg-[#FFCCBC]/30 rounded-full"
                    ></i>
                </div>
                <p
                    class="text-2xl leading-relaxed md:text-3xl font-light italic opacity-90"
                >
                    "{brand.description}"
                </p>
            </section>

            <!-- Order Section -->
            <section class="py-16 bg-[#FFF8E1]">
                <div class="container mx-auto px-4 max-w-2xl text-center">
                    <div
                        class="bg-white p-10 shadow-2xl rounded-xl border-4 border-[#D84315] relative overflow-hidden group"
                    >
                        <div
                            class="absolute top-0 left-0 w-full h-2 bg-[#D84315]"
                        >
                        </div>

                        <h2
                            class="text-4xl font-serif font-bold text-[#3E2723] mb-4"
                        >
                            Craving a Cup?
                        </h2>
                        <p class="text-lg text-gray-600 mb-8 italic">
                            Experience the warmth of freshly brewed chai
                            delivered to you.
                        </p>

                        <!-- Slider Button -->
                        <a
                            href={`https://wa.me/${brand.whatsapp}`}
                            target="_blank"
                            class="relative inline-flex items-center justify-center px-8 py-4 bg-[#D84315] text-white font-bold text-xl rounded-full overflow-hidden transition-all hover:scale-105 shadow-lg group-hover:shadow-[#D84315]/40 w-full md:w-auto"
                        >
                            <span
                                class="absolute inset-0 bg-[#BF360C] transform -translate-x-full group-hover:translate-x-0 transition-transform duration-300 ease-out"
                            ></span>
                            <span class="relative flex items-center gap-3">
                                Order Now <i
                                    class="fa-brands fa-whatsapp text-2xl"></i>
                            </span>
                        </a>
                    </div>
                </div>
            </section>

            <!-- Polaroid Gallery -->
            <section class="py-20 px-4 bg-[#3E2723] text-[#FFF8E1]">
                <h2 class="text-4xl text-center font-bold mb-12">
                    Moments of Joy
                </h2>
                <div
                    class="flex flex-wrap justify-center gap-8 max-w-6xl mx-auto"
                >
                    {
                        brand.gallery.map((img, index) => (
                            <div
                                class={`bg-white p-3 pb-12 shadow-2xl transform hover:scale-110 transition-transform duration-300 w-full md:w-80 ${index % 2 === 0 ? "rotate-2" : "-rotate-2"}`}
                            >
                                <div class="overflow-hidden aspect-square grayscale hover:grayscale-0 transition-all duration-700">
                                    <img
                                        src={img}
                                        alt="Gallery"
                                        class="w-full h-full object-cover"
                                    />
                                </div>
                                <div
                                    class="text-center mt-4 text-gray-800 font-handwriting font-bold text-xl opacity-80"
                                    style="font-family: 'Courier New', monospace;"
                                >
                                    Mr. Chai Original
                                </div>
                            </div>
                        ))
                    }
                </div>
            </section>

            <!-- Brand Footer -->
            <footer class="bg-[#2D1B18] text-[#D7CCC8] py-16 px-4">
                <div
                    class="container mx-auto grid grid-cols-1 md:grid-cols-3 gap-12 max-w-6xl"
                >
                    <!-- Location -->
                    <div>
                        <h3 class="text-2xl font-serif text-[#D84315] mb-6">
                            Find Us
                        </h3>
                        <p class="leading-relaxed mb-4">
                            Level 2, Momzland Food Court<br />
                            City Center Mall<br />
                            Mangalore, Karnataka 575001
                        </p>
                        <a
                            href="https://maps.google.com"
                            target="_blank"
                            class="text-[#D84315] hover:text-[#FF7043] transition-colors flex items-center gap-2"
                        >
                            <i class="fa-solid fa-map-location-dot"></i> Get Directions
                        </a>
                    </div>

                    <!-- Hours & Contact -->
                    <div>
                        <h3 class="text-2xl font-serif text-[#D84315] mb-6">
                            Open Hours
                        </h3>
                        <ul class="space-y-2 mb-6">
                            <li class="flex justify-between">
                                <span>Mon - Sun:</span>
                                <span>10:00 AM - 11:00 PM</span>
                            </li>
                        </ul>
                        <div class="pt-4 border-t border-[#D7CCC8]/10">
                            <p class="flex items-center gap-3 mb-2">
                                <i class="fa-solid fa-phone text-[#D84315]"></i> +{
                                    brand.whatsapp
                                }
                            </p>
                            <p class="flex items-center gap-3">
                                <i class="fa-solid fa-envelope text-[#D84315]"
                                ></i> hello@mrchai.com
                            </p>
                        </div>
                    </div>

                    <!-- Concept -->
                    <div class="text-center md:text-right">
                        <h3 class="text-3xl font-serif text-[#D84315] mb-4">
                            Mr. Chai
                        </h3>
                        <p class="text-sm opacity-60 mb-6 italic">
                            {brand.tagline}
                        </p>
                        <div class="flex justify-center md:justify-end gap-4">
                            <a
                                href="#"
                                class="w-10 h-10 rounded-full bg-[#D84315]/10 flex items-center justify-center hover:bg-[#D84315] hover:text-white transition-all"
                                ><i class="fa-brands fa-instagram"></i></a
                            >
                            <a
                                href="#"
                                class="w-10 h-10 rounded-full bg-[#D84315]/10 flex items-center justify-center hover:bg-[#D84315] hover:text-white transition-all"
                                ><i class="fa-brands fa-facebook-f"></i></a
                            >
                        </div>
                    </div>
                </div>
            </footer>
        </header>
    </div>
</Layout>
