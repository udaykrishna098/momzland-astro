---
import Layout from "../../layouts/Layout.astro";
import { Image } from "astro:assets";
import heroImage from "../../assets/outlets/lilpop-3d.jpg";

const brand = {
    name: "Lilpops",
    tagline: "Frozen Fantasy",
    description:
        "Cool down with delightful frozen treats. Handcrafted using real fruits and creamy dairy for your inner child.",
    whatsapp: "919876543210",
    menu: [
        {
            category: "Popsicles",
            items: [
                { name: "Fruit Pop", price: "‚Çπ40", desc: "Real fruit" },
                { name: "Choco Dip", price: "‚Çπ70", desc: "Rich coating" },
            ],
        },
        {
            category: "Scoops",
            items: [
                { name: "Nutty Feast", price: "‚Çπ80", desc: "Loaded nuts" },
                { name: "Mango Mood", price: "‚Çπ50", desc: "Seasonal" },
            ],
        },
    ],
    gallery: [
        "https://images.unsplash.com/photo-1563227812-0ea4c22e6cc8?auto=format&fit=crop&w=600&q=80",
        "https://images.unsplash.com/photo-1497034825429-c343d7c6a68f?auto=format&fit=crop&w=600&q=80",
        "https://images.unsplash.com/photo-1505394033641-40c6ad1178d1?auto=format&fit=crop&w=600&q=80",
    ],
};
const schema = JSON.stringify({
    "@context": "https://schema.org",
    "@type": "IceCreamShop",
    name: "Lilpops",
    parentOrganization: {
        "@type": "FoodCourt",
        name: "Momzland Food Court",
    },
    image: "https://momzland.com/assets/outlets/lilpop-3d.jpg",
    description: brand.description,
    address: {
        "@type": "PostalAddress",
        streetAddress: "Momzland Food Court, Near University Road",
        addressLocality: "Ramanattukara",
        addressRegion: "Kerala",
        postalCode: "673633",
        addressCountry: "IN",
    },
    geo: {
        "@type": "GeoCoordinates",
        latitude: 11.1786,
        longitude: 75.8306,
    },
    url: "https://momzland.com/brands/lilpops",
    telephone: "+91" + brand.whatsapp,
    servesCuisine: "Ice Cream, Popsicles, Desserts",
    priceRange: "‚Çπ",
    menu: "https://momzland.com/brands/lilpops",
});
---

<Layout
    title="Lilpops | Best Ice Cream & Popsicles in Ramanattukara | Momzland"
    description="Lilpops at Momzland Food Court. Beat the heat with handcrafted Fruit Popsicles, Choco Dips, and Creamy Scoops in Ramanattukara."
    keywords="Lilpops, Ice Cream Ramanattukara, Popsicles Ramanattukara, Frozen Desserts, Momzland Food Court"
    schema={schema}
    showNavbar={false}
    showFooter={false}
>
    <a
        href="/outlet"
        class="fixed top-6 left-6 z-50 w-12 h-12 bg-white/90 backdrop-blur text-[#7B1FA2] rounded-full shadow-lg flex items-center justify-center hover:scale-110 transition-transform border-4 border-[#7B1FA2]/20"
    >
        <i class="fa-solid fa-arrow-left text-xl"></i>
    </a>

    <div
        class="bg-gradient-to-b from-[#F3E5F5] to-white min-h-screen font-sans text-[#4A148C]"
    >
        <header
            class="text-center pt-24 pb-16 px-4 relative overflow-hidden h-[60vh] flex items-center justify-center"
        >
            <!-- Background Image -->
            <div class="absolute inset-0 z-0">
                <Image
                    src={heroImage}
                    alt="Lilpops Background"
                    class="w-full h-full object-cover opacity-60"
                    fetchpriority="high"
                />
                <div
                    class="absolute inset-0 bg-gradient-to-b from-[#F3E5F5]/80 via-[#F3E5F5]/60 to-white"
                >
                </div>
            </div>

            <!-- Floating Elements -->
            <div
                class="absolute top-10 left-10 text-6xl opacity-40 animate-float-slow z-0"
            >
                üç¶
            </div>
            <div
                class="absolute top-20 right-20 text-5xl opacity-40 animate-float-delayed z-0"
            >
                üçß
            </div>

            <div
                class="relative z-10 bg-white/70 backdrop-blur-md inline-block p-10 rounded-[40px] shadow-sm border border-white/60 max-w-2xl transform hover:scale-105 transition-transform duration-500"
            >
                <h1
                    class="text-5xl md:text-7xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-[#7B1FA2] to-[#CE93D8] mb-4 font-comic drop-shadow-sm"
                >
                    Lilpops
                </h1>
                <span
                    class="inline-block bg-[#CE93D8] text-white px-6 py-2 rounded-full font-bold text-sm shadow-inner transform -rotate-2 mb-6"
                    >{brand.tagline}</span
                >
                <p class="text-[#7B1FA2] font-semibold text-lg leading-relaxed">
                    {brand.description}
                </p>
            </div>
        </header>

        <!-- Order Section -->
        <section class="container mx-auto px-4 max-w-4xl py-12">
            <div
                class="bg-white/50 backdrop-blur-lg p-12 md:p-20 rounded-[50px] shadow-xl border-4 border-white text-center relative overflow-hidden group"
            >
                <div
                    class="absolute inset-0 bg-gradient-to-r from-[#F3E5F5] to-[#E1BEE7] opacity-50 z-0"
                >
                </div>

                <div class="relative z-10">
                    <h2
                        class="text-4xl md:text-6xl font-bold text-[#7B1FA2] mb-6 font-comic"
                    >
                        Feeling Hot?
                    </h2>
                    <p class="text-xl text-[#4A148C] font-semibold mb-10">
                        Chill out with the coolest pops in town, delivered fast!
                    </p>

                    <a
                        href={`https://wa.me/${brand.whatsapp}`}
                        target="_blank"
                        class="inline-flex items-center gap-3 bg-[#7B1FA2] text-white px-10 py-5 rounded-full font-bold text-xl shadow-lg hover:bg-[#4A148C] hover:scale-110 transition-all duration-300 group/btn"
                    >
                        <i
                            class="fa-solid fa-ice-cream text-2xl group-hover/btn:animate-bounce"
                        ></i> Order My Pop
                    </a>
                </div>
            </div>
        </section>

        <!-- Gallery Bubbles -->
        <section class="py-20 flex justify-center gap-6 flex-wrap px-4">
            {
                brand.gallery.map((img, i) => (
                    <div
                        class={`w-40 h-40 md:w-56 md:h-56 rounded-full overflow-hidden border-4 border-white shadow-xl ${i % 2 === 0 ? "mt-0" : "mt-12"}`}
                    >
                        <img
                            src={img}
                            class="w-full h-full object-cover hover:scale-110 transition-transform duration-500"
                            alt="Popsicle"
                        />
                    </div>
                ))
            }
        </section>

        <!-- Brand Footer -->
        <footer class="bg-[#4A148C] text-[#E1BEE7] py-16 px-4">
            <div
                class="container mx-auto grid grid-cols-1 md:grid-cols-3 gap-12 max-w-6xl"
            >
                <!-- Location -->
                <div>
                    <h3 class="text-2xl font-bold mb-6 font-comic">
                        Candyland
                    </h3>
                    <p class="leading-relaxed mb-4">
                        Level 2, Momzland Food Court<br />
                        City Center Mall<br />
                        Mangalore, Karnataka 575001
                    </p>
                    <a
                        href="https://maps.google.com"
                        target="_blank"
                        class="text-white hover:text-pink-200 transition-colors flex items-center gap-2"
                    >
                        <i class="fa-solid fa-map-location-dot"></i> Get Directions
                    </a>
                </div>

                <!-- Hours & Contact -->
                <div>
                    <h3 class="text-2xl font-bold mb-6 font-comic">
                        Freeze Time
                    </h3>
                    <ul class="space-y-2 mb-6 text-sm font-bold">
                        <li class="flex justify-between">
                            <span>Mon - Sun:</span>
                            <span>10:00 AM - 11:00 PM</span>
                        </li>
                    </ul>
                    <div class="pt-4 border-t border-white/20">
                        <p class="flex items-center gap-3 mb-2">
                            <i class="fa-solid fa-phone"></i> +{brand.whatsapp}
                        </p>
                        <p class="flex items-center gap-3">
                            <i class="fa-solid fa-envelope"></i> hello@lilpops.com
                        </p>
                    </div>
                </div>

                <!-- Concept -->
                <div class="text-center md:text-right">
                    <h3 class="text-4xl font-bold mb-4 font-comic">Lilpops</h3>
                    <p class="text-sm opacity-80 mb-6">{brand.tagline}</p>
                    <div class="flex justify-center md:justify-end gap-4">
                        <a
                            href="#"
                            class="w-12 h-12 rounded-full bg-white text-[#4A148C] flex items-center justify-center hover:scale-110 transition-transform shadow-lg"
                            ><i class="fa-brands fa-instagram text-xl"></i></a
                        >
                        <a
                            href="#"
                            class="w-12 h-12 rounded-full bg-white text-[#4A148C] flex items-center justify-center hover:scale-110 transition-transform shadow-lg"
                            ><i class="fa-brands fa-facebook-f text-xl"></i></a
                        >
                    </div>
                </div>
            </div>
        </footer>
    </div>
</Layout>

<style>
    @keyframes float-slow {
        0%,
        100% {
            transform: translateY(0) rotate(0);
        }
        50% {
            transform: translateY(-20px) rotate(10deg);
        }
    }
    .animate-float-slow {
        animation: float-slow 6s ease-in-out infinite;
    }
    .animate-float-delayed {
        animation: float-slow 7s ease-in-out infinite 1s;
    }
</style>
