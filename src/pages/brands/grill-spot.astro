---
import Layout from "../../layouts/Layout.astro";
import { Image } from "astro:assets";
import heroImage from "../../assets/outlets/grill-spot-3d.jpg";

const brand = {
    name: "Grill Spot",
    tagline: "Smoky Perfection",
    description:
        "Savor the smoky perfection of our signature grilled delicacies, marinated and cooked over open flames.",
    whatsapp: "919876543210",
    menu: [
        {
            category: "Grill",
            items: [
                {
                    name: "Grilled Chicken",
                    price: "₹450",
                    desc: "Spicy & Charred",
                },
                { name: "Alfaham", price: "₹260", desc: "Arabian style" },
            ],
        },
        {
            category: "Wraps",
            items: [
                { name: "Shawarma Plate", price: "₹150", desc: "Loaded meat" },
                {
                    name: "Mexican Shawarma",
                    price: "₹130",
                    desc: "Spicy twist",
                },
            ],
        },
    ],
    gallery: [
        "https://images.unsplash.com/photo-1529193591184-b1d58069ecdd?auto=format&fit=crop&w=600&q=80",
        "https://images.unsplash.com/photo-1555939594-58d7cb561ad1?auto=format&fit=crop&w=600&q=80",
        "https://images.unsplash.com/photo-1592686098855-61f953c8da27?auto=format&fit=crop&w=600&q=80",
    ],
};
const schema = JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Restaurant",
    name: "Grill Spot",
    parentOrganization: {
        "@type": "FoodCourt",
        name: "Momzland Food Court",
    },
    image: "https://momzland.co.in/assets/outlets/grill-spot-3d.jpg",
    description: brand.description,
    address: {
        "@type": "PostalAddress",
        streetAddress: "Momzland Food Court, Near University Road",
        addressLocality: "Ramanattukara",
        addressRegion: "Kerala",
        postalCode: "673633",
        addressCountry: "IN",
    },
    geo: {
        "@type": "GeoCoordinates",
        latitude: 11.1786,
        longitude: 75.8306,
    },
    url: "https://momzland.co.in/brands/grill-spot",
    telephone: "+91" + brand.whatsapp,
    servesCuisine: "Grill, BBQ, Shawarma, Arabian",
    priceRange: "₹₹",
    menu: "https://momzland.co.in/brands/grill-spot",
});
---

<Layout
    title="Grill Spot | Best Shawarma & Grills in Ramanattukara | Momzland"
    description="Grill Spot at Momzland Food Court. Savour the best Alfaham, Grilled Chicken, and Shawarma in Ramanattukara. Smoky perfection."
    keywords="Grill Spot, Shawarma Ramanattukara, Alfaham Ramanattukara, Grilled Chicken, Arabian Food Ramanattukara, Momzland Food Court"
    schema={schema}
    showNavbar={false}
    showFooter={false}
>
    <!-- Custom Back Button -->
    <a
        href="/outlet"
        class="fixed top-6 left-6 z-50 w-12 h-12 bg-[#333]/90 backdrop-blur text-[#FF5722] rounded-full shadow-lg flex items-center justify-center hover:scale-110 transition-transform border border-[#FF5722]/50"
    >
        <i class="fa-solid fa-arrow-left text-xl"></i>
    </a>

    <!-- Dark Mode / BBQ Theme -->
    <div
        class="bg-[#121212] text-[#E0E0E0] min-h-screen font-sans selection:bg-[#FF5722] selection:text-white"
    >
        <!-- Hero with Fire Effect -->
        <header
            class="relative h-[70vh] flex items-center justify-center overflow-hidden"
        >
            <div class="absolute inset-0 z-0">
                <Image
                    src={heroImage}
                    class="w-full h-full object-cover opacity-60"
                    alt="Grill Background"
                    fetchpriority="high"
                />
                <div
                    class="absolute inset-0 bg-gradient-to-t from-[#121212] via-[#121212]/50 to-transparent"
                >
                </div>
            </div>

            <div class="relative z-10 text-center">
                <div
                    class="inline-block border-2 border-[#FF5722] p-2 mb-6 rounded"
                >
                    <div
                        class="bg-[#FF5722]/10 px-6 py-2 uppercase tracking-[0.4em] text-[#FF5722] font-bold text-xs"
                    >
                        {brand.tagline}
                    </div>
                </div>
                <h1
                    class="text-6xl md:text-8xl font-black text-white uppercase tracking-tighter mb-4 animate-flicker"
                >
                    Grill<span class="text-[#FF5722]">.</span>Spot
                </h1>
                <p class="text-gray-400 max-w-md mx-auto text-lg font-light">
                    {brand.description}
                </p>
            </div>
        </header>

        <!-- Order Section -->
        <section class="py-20 px-4 container mx-auto max-w-4xl">
            <div
                class="relative bg-[#1E1E1E] border-2 border-[#FF5722] p-12 md:p-20 text-center overflow-hidden group"
            >
                <!-- Fire particles bg effect (simulated) -->
                <div
                    class="absolute inset-0 bg-[url('https://www.transparenttextures.com/patterns/carbon-fibre.png')] opacity-30"
                >
                </div>

                <h2
                    class="text-4xl md:text-6xl font-black text-white uppercase tracking-tighter mb-6 relative z-10"
                >
                    Ignite Your <span class="text-[#FF5722]">Appetite</span>
                </h2>
                <p
                    class="text-gray-400 text-lg md:text-xl mb-12 max-w-2xl mx-auto relative z-10"
                >
                    Craving that smoky char? Order your favorite grills directly
                    to your table or doorstep.
                </p>

                <a
                    href={`https://wa.me/${brand.whatsapp}`}
                    target="_blank"
                    class="inline-flex items-center gap-4 bg-[#FF5722] text-white px-10 py-5 rounded-none font-black uppercase tracking-[0.2em] hover:bg-white hover:text-[#FF5722] transition-colors relative z-10 group/btn"
                >
                    Start Order <i
                        class="fa-solid fa-fire-burner group-hover/btn:animate-pulse"
                    ></i>
                </a>
            </div>
        </section>

        <!-- Gallery -->
        <section class="grid grid-cols-1 md:grid-cols-3 gap-1 px-1 pb-1">
            {
                brand.gallery.map((img) => (
                    <div class="aspect-video relative group overflow-hidden bg-black">
                        <img
                            src={img}
                            class="w-full h-full object-cover opacity-70 group-hover:opacity-100 group-hover:scale-105 transition-all duration-500"
                            alt="Grill"
                        />
                    </div>
                ))
            }
        </section>

        <!-- Brand Footer -->
        <footer
            class="bg-[#121212] text-gray-400 py-16 px-4 border-t border-[#333]"
        >
            <div
                class="container mx-auto grid grid-cols-1 md:grid-cols-3 gap-12 max-w-6xl"
            >
                <!-- Location -->
                <div>
                    <h3
                        class="text-2xl font-bold text-[#FF5722] mb-6 uppercase"
                    >
                        Base Camp
                    </h3>
                    <p class="leading-relaxed mb-4">
                        Level 2, Momzland Food Court<br />
                        City Center Mall<br />
                        Mangalore, Karnataka 575001
                    </p>
                    <a
                        href="https://maps.google.com"
                        target="_blank"
                        class="text-gray-300 hover:text-[#FF5722] transition-colors flex items-center gap-2"
                    >
                        <i class="fa-solid fa-map-location-dot"></i> Get Directions
                    </a>
                </div>

                <!-- Hours & Contact -->
                <div>
                    <h3
                        class="text-2xl font-bold text-[#FF5722] mb-6 uppercase"
                    >
                        Fire Times
                    </h3>
                    <ul class="space-y-2 mb-6">
                        <li class="flex justify-between">
                            <span>Mon - Sun:</span>
                            <span>10:00 AM - 11:00 PM</span>
                        </li>
                    </ul>
                    <div class="pt-4 border-t border-[#333]">
                        <p class="flex items-center gap-3 mb-2">
                            <i class="fa-solid fa-phone text-[#FF5722]"></i> +{
                                brand.whatsapp
                            }
                        </p>
                        <p class="flex items-center gap-3">
                            <i class="fa-solid fa-envelope text-[#FF5722]"></i> fire@grillspot.com
                        </p>
                    </div>
                </div>

                <!-- Concept -->
                <div class="text-center md:text-right">
                    <h3 class="text-3xl font-black text-white mb-4 uppercase">
                        Grill Spot
                    </h3>
                    <p class="text-sm opacity-60 mb-6 italic">
                        {brand.tagline}
                    </p>
                    <div class="flex justify-center md:justify-end gap-4">
                        <a
                            href="#"
                            class="w-10 h-10 rounded bg-[#1E1E1E] text-[#FF5722] flex items-center justify-center hover:bg-[#FF5722] hover:text-white transition-all"
                            ><i class="fa-brands fa-instagram"></i></a
                        >
                        <a
                            href="#"
                            class="w-10 h-10 rounded bg-[#1E1E1E] text-[#FF5722] flex items-center justify-center hover:bg-[#FF5722] hover:text-white transition-all"
                            ><i class="fa-brands fa-facebook-f"></i></a
                        >
                    </div>
                </div>
            </div>
        </footer>

        <style>
            @keyframes flicker {
                0%,
                19%,
                21%,
                23%,
                25%,
                54%,
                56%,
                100% {
                    opacity: 1;
                    text-shadow: 0 0 10px rgba(255, 87, 34, 0.5);
                }
                20%,
                24%,
                55% {
                    opacity: 0.8;
                    text-shadow: none;
                }
            }
            .animate-flicker {
                animation: flicker 4s infinite;
            }
        </style>
    </div></Layout
>
