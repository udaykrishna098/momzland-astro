---
import Layout from "../../layouts/Layout.astro";
import { Image } from "astro:assets";
import heroImage from "../../assets/outlets/stream-and-fry-3d.jpg";

const brand = {
    name: "Stream & Fry",
    tagline: "Flavor Tradition",
    description:
        "Experience culinary artistry where flavor meets tradition. Chefs painstakingly select fresh local ingredients for your soul.",
    whatsapp: "919876543210",
    menu: [
        {
            category: "Momos",
            items: [
                {
                    name: "Beef Momos",
                    price: "₹140",
                    desc: "Steamed perfection",
                },
                { name: "Chicken Momos", price: "₹120", desc: "Juicy filling" },
            ],
        },
        {
            category: "Chinese",
            items: [
                { name: "Schezwan Noodles", price: "₹160", desc: "Spicy kick" },
                {
                    name: "Golden Prawns",
                    price: "₹220",
                    desc: "Crispy delight",
                },
            ],
        },
    ],
    gallery: [
        "https://images.unsplash.com/photo-1626082927389-6cd097cdc6ec?auto=format&fit=crop&w=600&q=80",
        "https://images.unsplash.com/photo-1534422298391-e4f8c172dddb?auto=format&fit=crop&w=600&q=80",
        "https://images.unsplash.com/photo-1563379926898-05f4575a45d8?auto=format&fit=crop&w=600&q=80",
    ],
};
const schema = JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Restaurant",
    name: "Stream & Fry",
    parentOrganization: {
        "@type": "FoodCourt",
        name: "Momzland Food Court",
    },
    image: "https://momzland.co.in/assets/outlets/stream-and-fry-3d.jpg",
    description: brand.description,
    address: {
        "@type": "PostalAddress",
        streetAddress: "Momzland Food Court, Near University Road",
        addressLocality: "Ramanattukara",
        addressRegion: "Kerala",
        postalCode: "673633",
        addressCountry: "IN",
    },
    geo: {
        "@type": "GeoCoordinates",
        latitude: 11.1786,
        longitude: 75.8306,
    },
    url: "https://momzland.co.in/brands/stream-and-fry",
    telephone: "+91" + brand.whatsapp,
    servesCuisine: "Momos, Chinese, Fried Chicken",
    priceRange: "₹₹",
    menu: "https://momzland.co.in/brands/stream-and-fry",
});
---

<Layout
    title="Stream & Fry | Best Momos & Chinese in Ramanattukara | Momzland"
    description="Stream & Fry at Momzland Food Court. Serving the best Beef Momos, Chicken Momos, and Spicy Schezwan Noodles in Ramanattukara."
    keywords="Stream and Fry, Momos Ramanattukara, Chinese food Ramanattukara, Fried Chicken, Momzland Food Court"
    schema={schema}
    showNavbar={false}
    showFooter={false}
>
    <!-- Bold / Asian Fusion Theme -->
    <div
        class="bg-[#111827] text-gray-100 min-h-screen font-sans selection:bg-[#B71C1C] selection:text-white"
    >
        <!-- Navbar Overlay -->
        <nav
            class="absolute top-0 w-full z-50 p-6 flex justify-between items-center text-white mix-blend-difference pointer-events-none"
        >
            <a
                href="/outlet"
                class="pointer-events-auto text-xs uppercase tracking-[0.2em] hover:text-[#B71C1C] transition-colors flex items-center gap-2"
                ><i class="fa-solid fa-arrow-left"></i> Back</a
            >
            <span class="font-black text-xl tracking-tighter">S&F</span>
        </nav>

        <!-- Hero Mosaic -->
        <div class="grid grid-cols-1 md:grid-cols-12 min-h-screen">
            <!-- Hero Text -->
            <div
                class="md:col-span-7 flex flex-col justify-center px-8 md:px-20 py-20 bg-[#B71C1C] relative overflow-hidden"
            >
                <div
                    class="absolute -right-20 top-0 text-[#D32F2F] opacity-20 font-black text-[20rem] leading-none select-none pointer-events-none rotate-12"
                >
                    fry
                </div>

                <div class="relative z-10">
                    <h1
                        class="text-6xl md:text-8xl font-black uppercase leading-[0.85] mb-6"
                    >
                        Stream<br />
                        <span
                            class="text-transparent bg-clip-text bg-gradient-to-r from-white to-black/50"
                            >&</span
                        ><br />
                        Fry
                    </h1>
                    <p
                        class="text-xl md:text-2xl font-light text-white/90 mb-12 max-w-md border-l-2 border-white pl-6"
                    >
                        {brand.description}
                    </p>
                    <a
                        href="#menu"
                        class="inline-block bg-white text-[#B71C1C] font-black uppercase text-sm tracking-widest px-10 py-4 hover:bg-black hover:text-white transition-colors"
                    >
                        Taste It
                    </a>
                </div>
            </div>

            <!-- Hero Image -->
            <div class="md:col-span-5 relative h-[50vh] md:h-auto">
                <Image
                    src={heroImage}
                    class="absolute inset-0 w-full h-full object-cover grayscale hover:grayscale-0 transition-all duration-700"
                    alt="Cover"
                    fetchpriority="high"
                />
                <div
                    class="absolute inset-0 bg-gradient-to-t from-[#111827] to-transparent opacity-80 md:hidden"
                >
                </div>
            </div>
        </div>

        <!-- Order Section -->
        <section class="py-32 px-4 container mx-auto">
            <div
                class="max-w-4xl mx-auto bg-gray-900 border border-gray-800 p-12 md:p-20 relative overflow-hidden group"
            >
                <div
                    class="absolute inset-0 bg-[url('https://www.transparenttextures.com/patterns/dark-matter.png')] opacity-20"
                >
                </div>
                <div
                    class="absolute -right-20 -top-20 w-64 h-64 bg-[#B71C1C] rounded-full blur-[100px] opacity-20"
                >
                </div>

                <div class="relative z-10 text-center">
                    <h2
                        class="text-5xl md:text-7xl font-black uppercase tracking-tighter mb-8 leading-none"
                    >
                        Hungry for <span
                            class="text-transparent bg-clip-text bg-gradient-to-r from-[#FF5252] to-[#B71C1C]"
                            >Bold</span
                        > Flavors?
                    </h2>
                    <p
                        class="text-gray-400 text-xl md:text-2xl font-light mb-12 max-w-2xl mx-auto"
                    >
                        Get steaming hot momos and fiery noodles delivered to
                        your spot.
                    </p>

                    <a
                        href={`https://wa.me/${brand.whatsapp}`}
                        target="_blank"
                        class="inline-flex group/btn relative overflow-hidden px-12 py-6 bg-white text-black font-black uppercase tracking-[0.2em] hover:bg-[#B71C1C] hover:text-white transition-colors duration-500"
                    >
                        <span class="relative z-10 flex items-center gap-4">
                            Start Order <i
                                class="fa-solid fa-arrow-right group-hover/btn:translate-x-2 transition-transform"
                            ></i>
                        </span>
                    </a>
                </div>
            </div>
        </section>

        <!-- Gallery Strip -->
        <section class="overflow-hidden pb-20">
            <div class="flex whitespace-nowrap gap-4 animate-scroll">
                <!-- Repeat images to simulate infinite scroll loop if needed later via JS, for now static centered -->
                <div class="flex gap-4 min-w-full justify-center">
                    {
                        brand.gallery.map((img) => (
                            <div class="w-[300px] h-[400px] bg-gray-800 shrink-0 relative group overflow-hidden">
                                <img
                                    src={img}
                                    class="w-full h-full object-cover opacity-60 group-hover:opacity-100 group-hover:scale-110 transition-all duration-500"
                                    alt="Gallery"
                                />
                                <div class="absolute inset-0 border-[1px] border-white/10 pointer-events-none z-10" />
                            </div>
                        ))
                    }
                </div>
            </div>

            <!-- Brand Footer -->
            <footer
                class="bg-black text-gray-300 py-20 border-t border-gray-800"
            >
                <div
                    class="container mx-auto grid grid-cols-1 md:grid-cols-3 gap-16 px-6"
                >
                    <div>
                        <h3
                            class="text-2xl font-black uppercase tracking-widest text-[#E57373] mb-8"
                        >
                            Location
                        </h3>
                        <p class="mb-4">
                            Level 2, Momzland Food Court<br />
                            City Center Mall<br />
                            Mangalore, Karnataka 575001
                        </p>
                        <a
                            href="https://maps.google.com"
                            target="_blank"
                            class="text-white hover:text-[#B71C1C] transition-colors uppercase tracking-[0.2em] text-xs flex items-center gap-2"
                        >
                            <i class="fa-solid fa-location-arrow"></i> Navigate
                        </a>
                    </div>

                    <div>
                        <h3
                            class="text-2xl font-black uppercase tracking-widest text-[#E57373] mb-8"
                        >
                            Hours
                        </h3>
                        <ul class="space-y-4 font-mono text-sm">
                            <li
                                class="flex justify-between border-b border-gray-800 pb-2"
                            >
                                <span>Mon - Sun</span>
                                <span>10:00 - 23:00</span>
                            </li>
                        </ul>
                        <div class="mt-8">
                            <p class="flex items-center gap-4 mb-4">
                                <i class="fa-solid fa-phone text-[#B71C1C]"></i> +{
                                    brand.whatsapp
                                }
                            </p>
                            <p class="flex items-center gap-4">
                                <i class="fa-solid fa-envelope text-[#B71C1C]"
                                ></i> yum@streamandfry.com
                            </p>
                        </div>
                    </div>

                    <div class="text-center md:text-right">
                        <h3
                            class="text-4xl font-black uppercase text-white mb-4"
                        >
                            Stream & Fry
                        </h3>
                        <p
                            class="text-xs tracking-[0.3em] uppercase opacity-50 mb-8"
                        >
                            {brand.tagline}
                        </p>
                        <div class="flex justify-center md:justify-end gap-6">
                            <a
                                href="#"
                                class="text-2xl hover:text-[#B71C1C] transition-colors"
                                ><i class="fa-brands fa-instagram"></i></a
                            >
                            <a
                                href="#"
                                class="text-2xl hover:text-[#B71C1C] transition-colors"
                                ><i class="fa-brands fa-facebook"></i></a
                            >
                        </div>
                    </div>
                </div>
            </footer>
        </section>
    </div></Layout
>
